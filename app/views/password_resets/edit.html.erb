<div id="wide-content">
  <h1><%=t 'change_my_password' -%></h1>
  <div class="box">
    <%= form_for @user, :url => password_reset_path, :method => :put do |f| %>
      <%= render "shared/error_messages", :target => @user %>
      <dl>
        <dt><label for="password"><%=t 'password' -%></label></dt>
        <dd><%= f.password_field :password, :class => "textfield", :size => "20" %></dd>

        <dt><label for="password_confirmation"><%=t 'confirm_password' -%></label></dt>
        <dd><%= f.password_field :password_confirmation, :class => "textfield", :style => "20" %></dd>

        <dd><%= f.submit t('button.update'), :class => "button" %></dd>
      </dl>
    <% end %>
  </div>
</div>
