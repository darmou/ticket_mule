<h2>Edit <%= @user.username -%></h2>
 
<%= form_for @user do |f| %>
  <%= render "shared/error_messages", :target => @user %> 
  <dl>
    <%= render :partial => "form", :object => f %>
    <dd><%= f.submit "Update", :class => "button" -%>&nbsp;&nbsp;<%= link_to 'Cancel', user_path %></dd>
  </dl>
<% end %>